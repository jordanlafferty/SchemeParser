(define env '((a 1) (b 2) (c 5)))
; resolve a
(define resolve
  (lambda (environment varname)
    (cond
      ((null? environment) #false)
      ((equal? (car (car environment)) varname) (cadar environment))
      (else (resolve (cdr environment) varname)))))

